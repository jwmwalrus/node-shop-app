<% if (orders.length > 0) { %>
  <ul class="orders">
    <% orders.forEach(order => {%>
      <li>
          <h1>#<%= order._id %></h1>
          <ul class="orders-products">
              <% order.items.forEach(item => { %>
              <li><%= item.product.title %> (<%= item.quantity %>)</li>
              <% }); %>
          </ul>
      </li>
    <% }); %>
  </ul>
<% } else { %>
  <h1>Nothing to see here... move along</h1>
<% } %>

<%- contentFor('styles') %>
