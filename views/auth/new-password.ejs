<form class="login-form" action="/new-password" method="POST" novalidate>
  <div class="form-control">
    <label for="password">Password</label>
    <% { %>
      <% const err = locals.errors?.find(e => e.path === 'password'); %>
      <input type="password" id="password" name="password" class="<%= err ? 'invalid' : ''%>" value="<%= input.password ?? '' %>" required>
      <% if (err) { %>
        <p class="error"><%= err.msg %> </p>
      <% } %>
    <% } %>
  </div>
  <div class="form-control">
    <label for="confirmPassword">Confirm Password</label>
    <% { %>
      <% const err = locals.errors?.find(e => e.path === 'confirmPassword'); %>
      <input type="password" id="confirmPassword" name="confirmPassword" class="<%= err ? 'invalid' : ''%>" value="<%= input.confirmPassword ?? '' %>" required>
      <% if (err) { %>
        <p class="error"><%= err.msg %> </p>
      <% } %>
    <% } %>
  </div>
  <button type="submit" class="btn">Login</button>
  <input type="hidden" name="token" value="<%= token %>"/>
  <input type="hidden" name="userId" value="<%= userId %>"/>
  <%- include('../includes/csrf-token.ejs') %>
</form>

<%- contentFor('styles') %>
<link rel="stylesheet" href="/css/auth.css">
<link rel="stylesheet" href="/css/forms.css">
