<form class="login-form" action="/login" method="POST" novalidate>
  <div class="form-control">
    <label for="email">E-Mail</label>
    <% { %>
      <% const err = locals.errors?.find(e => e.path === 'email'); %>
      <input type="email" name="email" class="<%= err ? 'invalid' : ''%>" value="<%= input.email ?? '' %>" required>
      <% if (err) { %>
        <p class="error"><%= err.msg %> </p>
      <% } %>
    <% } %>
  </div>
  <div class="form-control">
    <label for="password">Password</label>
    <input type="password" name="password" value="<%= input.password ?? '' %>" required>
  </div>
  <button type="submit" class="btn">Login</button>
  <%- include('../includes/csrf-token.ejs') %>
</form>
<div class="centered">
  <a href="/reset">Reset Password</a>
</div>

<%- contentFor('styles') %>
<link rel="stylesheet" href="/css/auth.css">
<link rel="stylesheet" href="/css/forms.css">
