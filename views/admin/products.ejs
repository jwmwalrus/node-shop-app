<% if (prods.length > 0) { %>
  <div class="grid">
    <% for (let product of prods) { %>
      <article class="card product-item">
        <header class="card-header">
          <h1 class="product-title"><%= product.title %></h1>
        </header>
        <div class="card-image">
          <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
        </div>
        <div class="card-content">
          <h2 class="product-price">$<%= product.price %></h2>
          <p class="product-description"><%= product.description %></p>
        </div>
        <div class="card-actions">
          <form action="/admin/edit-product/<%= product._id %>/?edit=true">
            <button type="submit" class="btn">Edit</button>
          </form>
          <button type="button" class="btn" onclick="deleteProduct(this);">Delete</button>
          <input type="hidden" id="productId" name="productId" value="<%= product._id %>"  />
          <%- include('../includes/csrf-token.ejs') %>
        </div>
      </article>
    <% } %>
  </div>
<% } else { %>
  <h1>No Products</h1>
<% } %>

<%- contentFor('styles') %>
<link rel="stylesheet" href="/css/product.css">
<script src="/js/admin.js" defer></script>

